@{
    ViewData["Title"] = "Gerir - Informações sobre Diabetes";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Conhecendo o Diabetes</h1>
            <p class="text-center lead">Um guia completo sobre Diabetes Tipo 1 e Tipo 2.</p>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Diabetes Tipo 1 -->
        <div class="col-md-6 mb-4">
            <div class="card content-toggle">
                <div class="card-body">
                    <h3 class="card-title">Diabetes Tipo 1</h3>
                    <p class="card-text">Entenda o que é, as causas, sintomas e tratamentos para o Diabetes Tipo 1.</p>
                    <div class="image-container">
                        <img src="~/imagens/1.png" alt="Diabetes Tipo 1" class="img-fluid">
                    </div>
                    <div class="additional-info" style="display: none;">
                        <p>Informação adicional sobre Diabetes Tipo 1.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Diabetes Tipo 2 -->
        <div class="col-md-6 mb-4">
            <div class="card content-toggle">
                <div class="card-body">
                    <h3 class="card-title">Diabetes Tipo 2</h3>
                    <p class="card-text">Saiba mais sobre o Diabetes Tipo 2: prevenção, gerenciamento e cuidados necessários.</p>
                    <div class="image-container">
                        <img src="~/imagens/2.png" alt="Diabetes Tipo 2" class="img-fluid">
                    </div>
                    <div class="additional-info" style="display: none;">
                        <p>Informação adicional sobre Diabetes Tipo 2.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

